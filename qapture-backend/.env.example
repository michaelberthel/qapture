# Environment Variables

# Database
DATABASE_URL="sqlserver://localhost:1433;database=qapture_dev;user=sa;password=YourPassword;encrypt=true;trustServerCertificate=true"

# MongoDB (for migration)
MONGODB_ATLAS_URI="mongodb+srv://username:password@cluster.mongodb.net/qapture"

# Azure AD / MSAL
AZURE_TENANT_ID="your-tenant-id"
AZURE_CLIENT_ID="your-client-id"
AZURE_CLIENT_SECRET="your-client-secret"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Microsoft Graph API
SENDER_EMAIL="noreply@yourdomain.com"

# Server
NODE_ENV="development"
PORT=5000

# Legacy PHP API
LEGACY_API_URL="https://your-legacy-api.com"
USE_LEGACY_MONGODB="false"

# CORS
FRONTEND_URL="http://localhost:3000"
